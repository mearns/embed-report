<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
    <!--
    This jelly script is used for per-project configuration.
    -->

    <f:entry>
        <f:repeatable field='targets' minimum='1'>

            <f:entry title="Report name">
                <f:textbox field='name' default='Report' />
            </f:entry>
            <f:entry title="Report files">
                <f:textbox field='file' default='report.html' />
            </f:entry>
            <f:entry title="Save for">
                <f:select field='association' />
            </f:entry>

            <f:entry title="IFRAME height">
                <f:number field='height' default='300' />
            </f:entry>

            <f:repeatableDeleteButton value='Delete report' />

        </f:repeatable>
    </f:entry>

</j:jelly>
